  },
  "devDependencies": {
    "@types/node": "20.14.10",
    "@typescript-eslint/eslint-plugin": "5.0.0",
    "@typescript-eslint/parser": "5.0.0",
    "eslint": "8.57.0",
    "homebridge": "1.8.3",
    "rimraf": "5.0.7",
    "ts-node": "10.9.2",
